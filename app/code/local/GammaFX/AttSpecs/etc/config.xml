<config>
    <modules>
        <GammaFX_AttSpecs>
            <version>1.0.2</version>
        </GammaFX_AttSpecs>
    </modules>
    <global>
        <helpers>
            <attspecs>
                <class>GammaFX_AttSpecs_Helper</class>
            </attspecs>
        </helpers>
        <blocks>
            <attspecs>
                <class>GammaFX_AttSpecs_Block</class>
            </attspecs>
            <catalog>
                <rewrite>
                    <product_view_attributes>GammaFX_AttSpecs_Block_Catalog_Attributes</product_view_attributes>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <attspecs>
                <class>GammaFX_AttSpecs_Model</class>
            </attspecs>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <attspecs>
                    <file>gammafx/attspecs.xml</file>
                </attspecs>
            </updates>
        </layout>
    </frontend>
    <default>
        <attspecs>
            <general>
                <is_metric>1</is_metric>
                <is_hint>0</is_hint>
            </general>
        </attspecs>
    </default>
</config>
