<?xml version="1.0" encoding="utf-8"?>
<config>
	<tabs>
		<gammafx translate="label" module="attspecs">
			<label>GammaFX</label>
			<sort_order>0</sort_order>
		</gammafx>
	</tabs>
	<sections>
        <attspecs translate="label" module="attspecs">
            <label>AttSpecs Options</label>
            <tab>gammafx</tab>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<general>
            		<label>General Specification Settings</label>
            		<comment>You must set settings, why not?</comment>
            		<sort_order>1</sort_order>
            		<show_in_default>1</show_in_default>
            		<show_in_website>1</show_in_website>
            		<show_in_store>0</show_in_store>
					<expanded>1</expanded>
            		<fields>
            			<is_metric>
            				<label>Is Metric Website</label>
            				<comment>If this store/website must to use metric system, set "Yes"</comment>
            				<sort_order>1</sort_order>
            				<frontend_type>select</frontend_type>
              				<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
            			</is_metric>
            		</fields>
            	</general>
				<featured>
					<label>Featured Attributes</label>
					<comments>Please, set up your featured attributes.</comments>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<expanded>1</expanded>
					<fields>
						<specs translate="label">
							<label>Featured</label>
							<frontend_model>attspecs/adminhtml_specification</frontend_model>
							<backend_model>adminhtml/system_config_backend_serialized_array</backend_model>
							<sort_order>10</sort_order>
							<upload_dir config="system/filesystem/media" scope_info="1">theme</upload_dir>
							<base_url type="media" scope_info="1">theme</base_url>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</specs>
					</fields>
				</featured>
            </groups>
        </attspecs>
    </sections>
</config>
